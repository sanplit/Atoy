body{
	background-color:#eee8cd;
}

.webLeft{
	float:left;
	width:100px;
	background:#00f;
	margin-right:-3px;
}
.webRight{
	float:right;
	width:100px;
	background:#0f0;
	margin-left:-3px;
}
#webCenter{
	//background:#333;
	//background-image:url(images/dan.png);

	height:auto;
    position:absolute;
	left:30%;
	top:0px;
}

.pages a,.pages span {
	display:inline-block;
	padding:6px 15px;
	margin:0 1px;
	border:1px solid #f0f0f0;
	-webkit-border-radius:3px;
	-moz-border-radius:3px;
	border-radius:3px;
}
.pages a,.pages li {
	display:inline-block;
	list-style: none;
	text-decoration:none; color:#58A0D3;
}
.pages a.first,.pages a.prev,.pages a.next,.pages a.end{
	margin:0;
}
.pages a:hover{
	border-color:#50A8E6;
}
.pages span.current{
	background:#50A8E6;
	color:#FFF;
	font-weight:700;
	border-color:#50A8E6;
}
